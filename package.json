{
  "name": "pdk-tokens",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "style-dictionary clean",
    "transform:sejl": "npx token-transformer tokens.json tokens/sejl.json Sejl",
    "build:sejl": "style-dictionary build --config config.sejl.js",
    "build": "npm run transform:sejl && npm run build:sejl",
    "test": "node ./scripts/transform-design-tokens.js && npm run clean && style-dictionary build"
  },
  "dependencies": {
    "node-fetch": "^3.2.0",
    "token-transformer": "^0.0.17"
  },
  "devDependencies": {
    "style-dictionary": "^3.7.0"
  }
}